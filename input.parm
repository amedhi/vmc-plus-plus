#----------------------------------------------------------------------
#                       ~~~My program~~~                           
#                       Input Parameters                             
#-----------------------------------------------------------------------
#---------------------------------------------
# Job Specification 
#---------------------------------------------
job = "VMC Simulation" 
mode = "NEW" # ("NEW"/"APPEND")
print_level = -2 #-2

#---------------------------------------------
# Lattice:
#---------------------------------------------
lattice = "SQUARE" 
lsize1 = 8
lsize2 = 8
bc1 = "periodic"
bc2 = "antiperiodic"

#---------------------------------------------
# Model:
#---------------------------------------------
model = "t-J"
#model = "HUBBARD"
t = 1.0
J = 0.35
#U = 8.0

#---------------------------------------------
# Variational wavefunction
#---------------------------------------------
mf_order = "DWAVE_SC"
gutzwiller_proj = "NO"
hole_doping = 0.20
g = 1.0
delta_sc = 0.5
mu = 0.0


#---------------------------------------------
# List of observable to calculate:
#---------------------------------------------
Energy = "Yes"
Magnetization = "No"

#---------------------------------------------
# Monte Carlo parameters
#---------------------------------------------
rng_seed = 1  # (=0 No seed, >0 time_seed)
measure_steps = 1000
warmup_steps = 100
min_interval = 2
max_interval = 5





