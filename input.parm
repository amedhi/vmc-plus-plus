#----------------------------------------------------------------------
#                       ~~~My program~~~                           
#                       Input Parameters                             
#-----------------------------------------------------------------------
#---------------------------------------------
# Job Specification 
#---------------------------------------------
job = "VMC Simulation" 
mode = "NEW" # ("NEW"/"APPEND")
print_level = -2 #-2

#---------------------------------------------
# Lattice:
#---------------------------------------------
lattice = "SQUARE" 
lsize1 = 8
lsize2 = 8
bc1 = "periodic"
bc2 = "antiperiodic"

#---------------------------------------------
# Model:
#---------------------------------------------
#model = "t-J"
model = "HUBBARD"
t = 1.0
J = 0.35
U = 8.0

#---------------------------------------------
# Variational wavefunction
#---------------------------------------------
mf_order = "DWAVE_SC"
gutzwiller_proj = "YES"
hole_doping = 0.20
gfactor = 0.2  #, 0.5, 0.7
delta_sc = 0.1 #, 0.1, 1.0
mu = 0.0
mu_variational = "YES"


#---------------------------------------------
# List of observable to calculate:
#---------------------------------------------
Energy = "Yes"
Magnetization = "No"

#---------------------------------------------
# Monte Carlo parameters
#---------------------------------------------
rng_seed = 1  # (=0 No seed, >0 time_seed)
measure_steps = 1000
warmup_steps = 100
min_interval = 2
max_interval = 5





