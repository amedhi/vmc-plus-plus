#---------------------------------------------
# Job Specification 
#---------------------------------------------
job = "VMC Simulation" 
mode = "NEW" # ("NEW"/"APPEND")
print_level = -2 #-2

#---------------------------------------------
# Lattice:
#---------------------------------------------
lattice = "SQUARE" 
lsize1 = 4
lsize2 = 4
bc1 = "periodic"
bc2 = "antiperiodic"

#---------------------------------------------
# Model:
#---------------------------------------------
model = "t-J"
t = 1.0
J = 1.0
delta_sc = 1.0

#---------------------------------------------
# Variational wavefunction
#---------------------------------------------
mf_order = "DWAVE_SC"
x = 0.0
g = 1.0
delta_sc = 1.0
mu = 0.0


#---------------------------------------------
# List of observable to calculate:
#---------------------------------------------
Energy = "Yes"
Magnetization = "No"

#---------------------------------------------
# Monte Carlo parameters
#---------------------------------------------
rng_seed = 1  # (=0 No seed, >0 time_seed)
measure_samples = 5000
warmup = 5000
min_interval = 5
max_interval = 20





